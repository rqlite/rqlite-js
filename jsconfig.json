{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonJS",
    "target": "ES5"
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "es6/**/*"
  ],
  "files.eol": "\n",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false
}